# Database (Neon or any PostgreSQL)
# Use Neon "Pooled connection string" for DATABASE_URL
DATABASE_URL="your_postgres_connection_string"
# Use Neon "Connection string" (direct) for Prisma migrations
DIRECT_URL="your_direct_postgres_connection_string"

# Application URL (use custom port if not 3000)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Public app URL (used for Mini App + onchain stamp URI)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Default UI language when ?lang is not provided ("ja" or "en")
NEXT_PUBLIC_LANG="en"

# Base Network RPC URL (mainnet)
BASE_MAINNET_RPC_URL="https://mainnet.base.org"

# Deployer wallet private key (NEVER commit this with real values!)
# Generate with: openssl rand -hex 32
DEPLOYER_PRIVATE_KEY="your_private_key_here"

# Basescan API key for contract verification (optional)
# Get one at: https://basescan.org/myapikey
BASESCAN_API_KEY="your_basescan_api_key"

# Contract addresses (filled after deployment)
NEXT_PUBLIC_GLITCH_REGISTRY_ADDRESS="deployed_contract_address"
NEXT_PUBLIC_GLITCH_STAMP_ADDRESS="deployed_contract_address"

# Privy authentication (Phase 4)
NEXT_PUBLIC_PRIVY_APP_ID="your_privy_app_id"
PRIVY_APP_SECRET="your_privy_app_secret"

# Discord Webhooks (Phase 6)
DISCORD_WEBHOOK_NEW_GLITCH="your_discord_webhook_url_for_new_glitches"
DISCORD_WEBHOOK_STAMPS="your_discord_webhook_url_for_stamps"
